<body>
    <h1><%= title %></h1>

    <%- messages() %>

    <form id="deleteForm" action="/inv/delete/<%= locals.inv_id %>" method="post">
        <p>Confirm Deletion - The delete is permanent.</p>
        <label for="inv_make">Vehicle Make:</label><br>
        <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" readonly><br>
        <label for="inv_model">Vehicle Model:</label><br>
        <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" readonly><br>
        <label for="inv_year">Vehicle Year:</label><br>
        <input type="text" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" readonly><br>
        <label for="inv_price">Vehicle Price:</label><br>
        <input type="text" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" readonly><br>
        <button type="submit">Delete</button>
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %> >
    </form>
</body>